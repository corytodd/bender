<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <targets>
        <target name="logfile" xsi:type="File" fileName="bender.log"/>
        <target name="readerLog" xsi:type="File" fileName="bender.reader.log" layout="${message}"/>

        <target name="coloredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
                layout="${longdate}|${message} ${onexception:EXCEPTION OCCURRED\:${exception:format=tostring}}">
            <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkMagenta"/>
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray"/>
            <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray"/>
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow"/>
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red"/>
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White"/>
        </target>

        <target name="debugger" xsi:type="Debugger" layout="${logger}::${message}"/>

    </targets>

    <rules>
        <logger name="ReaderLog" minlevel="Debug" writeTo="readerLog" final="true"/>
        <logger name="*" minlevel="Trace" writeTo="logfile"/>
        <logger name="*" minlevel="Debug" writeTo="coloredConsole"/>
        <logger name="*" minlevel="Debug" writeTo="debugger"/>
    </rules>
</nlog>
